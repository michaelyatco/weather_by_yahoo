<h1><%= @title %></h1>
<%= form_tag "/forecasts", method: :get do %>
  <p>City: <input type="text" name="city"></p>
  <p>State: <input type="text" name="state"></p>
  <input type="submit">
<% end %>
<% @forecasts[0..4].each do |forecast| %>
  <p><%= forecast["date"] %></p>
  <p><%= forecast["day"] %></p>
  <p>High: <%= forecast["high"] %></p>
  <p>Low: <%= forecast["low"] %></p>
  <p><%= forecast["text"] %></p>
  <hr>
<% end %>

<p><%= @description.html_safe %></p>